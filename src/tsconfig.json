{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "baseUrl": "./src",

    "ignoreDeprecations": "6.0"
  },
  "include": ["src"],
  "references": []
}